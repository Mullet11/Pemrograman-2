<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.PlantController">

    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Manajemen Tanaman"
                   style="-fx-font-size:18; -fx-font-weight:bold;"/>

            <TableView fx:id="plantTable">
                <columns>
                    <TableColumn fx:id="nameCol" text="Nama"/>
                    <TableColumn fx:id="typeCol" text="Tipe"/>
                    <TableColumn fx:id="ageCol" text="Umur Panen (hari)"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <TextField fx:id="nameField" promptText="Nama Tanaman"/>
                <ComboBox fx:id="typeBox" promptText="Tipe"/>
                <TextField fx:id="ageField" promptText="Umur Panen"/>
            </HBox>

            <HBox spacing="10">
                <Button text="Tambah" onAction="#handleAdd"/>
                <Button text="Update" onAction="#handleUpdate"/>
                <Button text="Hapus" onAction="#handleDelete"/>
                <Button text="Refresh" onAction="#handleRefresh"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
