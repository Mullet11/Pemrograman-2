                        </VBox>
                        
                        <Separator layoutY="100.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />
                        
                        <!-- Statistics Cards -->
                        <Label alignment="CENTER" layoutY="120.0" style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Toko Buku" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                        
                        <HBox alignment="CENTER" layoutY="160.0" spacing="30" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
                           <children>
                              <!-- Card 1: Total Pelanggan -->
                              <VBox prefHeight="140.0" prefWidth="200.0" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);">
                                 <padding>
                                    <Insets bottom="20" left="20" right="20" top="20" />
                                 </padding>
                                 <Label style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-font-weight: bold;" text="PELANGGAN" />
                                 <Label fx:id="lblTotalPelanggan" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #2196F3;" text="0" />
                                 <Label style="-fx-font-size: 11px; -fx-text-fill: #999;" text="Total pelanggan terdaftar" />
                              </VBox>
                              
                              <!-- Card 2: Total Buku -->
                              <VBox prefHeight="140.0" prefWidth="200.0" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);">
                                 <padding>
                                    <Insets bottom="20" left="20" right="20" top="20" />
                                 </padding>
                                 <Label style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-font-weight: bold;" text="BUKU" />
                                 <Label fx:id="lblTotalBuku" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="0" />
                                 <Label style="-fx-font-size: 11px; -fx-text-fill: #999;" text="Judul buku tersedia" />
                              </VBox>
                              
                              <!-- Card 3: Total Transaksi -->
                              <VBox prefHeight="140.0" prefWidth="200.0" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);">
                                 <padding>
                                    <Insets bottom="20" left="20" right="20" top="20" />
                                 </padding>
                                 <Label style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-font-weight: bold;" text="TRANSAKSI" />
                                 <Label fx:id="lblTotalTransaksi" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #FF9800;" text="0" />
                                 <Label style="-fx-font-size: 11px; -fx-text-fill: #999;" text="Total penjualan tercatat" />
                              </VBox> 
                           </children>
                        </HBox>
                        
                        <!-- Card Pendapatan (Centered & Larger) -->
                        <VBox layoutY="330.0" prefHeight="120.0" spacing="15" style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0, 0, 4);" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0">
                           <padding>
                              <Insets bottom="25" left="30" right="30" top="25" />
                           </padding>
                           <Label style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold;" text="TOTAL PENDAPATAN" />
                           <Label fx:id="lblTotalPendapatan" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" text="Rp 0" />
                        </VBox>
                        
                        <Separator layoutY="480.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />
                        
                        <!-- Navigation Menu -->
                        <Label layoutY="510.0" style="-fx-font-weight: bold; -fx-font-size: 18px;" text="ðŸš€ Navigasi Cepat" AnchorPane.leftAnchor="40.0" />
                        
                        <HBox alignment="CENTER" layoutY="550.0" spacing="20" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">
                           <children>
                              <Button onAction="#onGoToPelanggan" prefHeight="55.0" prefWidth="180.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="Data Pelanggan" />
                              
                              <Button onAction="#onGoToBuku" prefHeight="55.0" prefWidth="180.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="Data Buku" />
                              
                              <Button onAction="#onGoToPenjualan" prefHeight="55.0" prefWidth="180.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="Transaksi" />
                              
                              <Button onAction="#onRefreshStatistics" prefHeight="55.0" prefWidth="180.0" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="Refresh Data" />
                           </children>
                        </HBox>
                        
                        <!-- Footer -->
                        <Label alignment="CENTER" layoutY="630.0" style="-fx-text-fill: #999; -fx-font-size: 11px;" text="Â© 2024 Sistem Informasi Toko Buku - Oleh Mullet11" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          
          <!-- TAB 2: PELANGGAN -->
          <Tab fx:id="tabPelanggan" text="Pelanggan">
            <!-- Content akan di-load dari PelangganView.fxml -->
          </Tab>
          
          <!-- TAB 3: BUKU -->
          <Tab fx:id="tabBuku" text="Buku">
            <!-- Content akan di-load dari BukuView.fxml -->
          </Tab>
          
          <!-- TAB 4: PENJUALAN -->
          <Tab fx:id="tabPenjualan" text="Penjualan">
            <!-- Content akan di-load dari PenjualanView.fxml -->
          </Tab>
        </tabs>
      </TabPane>
   </children>
